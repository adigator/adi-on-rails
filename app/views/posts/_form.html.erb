<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> post nie utworzony:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Tytuł %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Treśc %><br>
    <%= f.text_area :text, :size => "70x15" %>
  </div>
  <div class="actions">
    <%= f.submit "Uaktualnij post", :class => "agawa"%>
  </div>
<% end %>
